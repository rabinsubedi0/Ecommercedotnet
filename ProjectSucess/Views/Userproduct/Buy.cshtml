@model ProjectSucess.Models.TotalProduct
<link href="~/css/produtc.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<link href="/css/Buy.css" rel="stylesheet" />
<body id="buysystem">
    <div class="">


        <div class="">

            <div class="row">
                <div class="col-md-5">
                    <div class="container">

                        @if (Model.ImageName != null)
                        {
                            <h4>Buy Item: @Model.ProductName </h4>
                            <img src="~/Images/@Model.ImageName" class="" id="BuyImage" />
                            <div class="container">
                <div class="ratingsection">
                    <section>
                        <h6>Ratings & Reviews of @Model.ProductName</h6>
                    </section>
                </div>

            </div>
                        }
                        else
                        {
                            <img src="~/Images/bike-default.png" class="img-fluid img-thumbnail" width="400" height="200" />
                        }



                    </div>




                </div>



                <div class="col-md-4 mt-4">
                    <div class="modal-header">
                        <h3>Product Details</h3>
                        <button type="button" class="close" data-dismiss="modal"></button>
                    </div>
                    <div>
                        <div class="container" style="font-family: 'Oswald', sans-serif;">
                            <form method="POST" action="index.php">
                                <div class="form-group">
                                    <h5>Product Name:@Model.ProductName</h5>
                                </div>

                                <div class="form-group">
                                    <h5>Product Price:@Model.ProductPrice</h5>
                                </div>
                                <div class="form-group">
                                    <h5> Product Catgeory:@Model.CategoryName</h5>
                                </div>
                                <div class="form-group">
                                    <h5>Product Description:@Model.ProductDescription</h5>
                                </div>
                                <div class=" push-left">
                                    <button class="btn btn-danger" asp-action="Purchase" id="mak">Buy Now</button>

                                </div>

                            </form>
                        </div>

                    </div>
                </div>






                <div class="col-md-3 push-left" id="sidedone">
                    <form action="/" method="post">

                        <div class="form-group ">
                            <h5 class="text-center">Our Catgeory & Product`s</h5>
                            <div class="form-group card text-center">

                                <a><img src="~/Design/rice.jpg" height="40" class="mr-5" alt="Alternate Text" />Rice</a>
                            </div>

                            <div class="form-group card text-center">
                                <a> <img src="~/Design/vege.jpg" height="40" alt="Alternate Text" /> Vegestable`s</a>
                            </div>

                            <div class="form-group card text-center">
                                <a asp-action="Display" asp-controller="Userproduct"> <img src="~/Design/fruits.jpg" height="40" class="mr-5" alt="Alternate Text" />Fruits</a>
                            </div>

                            <div class="form-group card text-center">
                                <a> <img src="~/Design/dal.jpg" class="mr-5" height="40" alt="Alternate Text" /> Dal`s</a>
                            </div>
                            <div class="form-group card text-center">
                                <a> <img src="~/Design/flourss.jpg" height="40" class="mr-5" alt="Alternate Text" />FLours</a>
                            </div>

                            <div class="form-group card text-center">
                                <a> <img src="~/Design/toy.jpg" class="mr-5" height="40" alt="Alternate Text" />Toy</a>
                            </div>
                            <div class="form-group card text-center">
                                <a> <img src="~/Design/drinks.jpg" height="40" class="mr-5" alt="Alternate Text" /> Drinks</a>
                            </div>
                            <div class="form-group card text-center">
                                <a><img src="~/Design/biscu.png" class="mr-3" height="40" alt="Alternate Text" /> Biscuits</a>
                            </div>
                            <div class="form-group card text-center">
                                <a> <img src="~/Design/milk.png" class="ml-1" height="40" alt="Alternate Text" /> Dairy</a>
                            </div>
                            <div class="form-group card text-center">
                                <a> <img src="~/Design/egg.jpg" height="40" class="mr-5" alt="Alternate Text" />Eggs</a>
                            </div>
                        </div>
                    </form>

                </div>

            

                <div class="commentsection ml-5">
                    <h6>Questions about this product (@Model.ProductId)</h6>
                    <input id="commentsection" placeholder="Ask your question`s">

                    <div class=" push-right mt-4">
                        <button class="btn btn-danger"  asp-controller="Userproduct" asp-action="selecttype" id="lo">Ask Question</button>

                    </div>

                </div>


            </div>
        </div>
    </div>
</body>
