@model List<ProjectSucess.Models.TotalProduct>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/js/site.js" rel="stylesheet" />


<div class="container">
    <h1>Product List</h1>
    <p>

    </p>
    
    @using (Html.BeginForm("Index", "Product", FormMethod.Post))
    {<a class="btn btn-warning" asp-action="Create">Create New</a>
        @Html.TextBox("searching")

        <input type="submit" value="Search" class="fa-fa-Facebook" />

    }
</div>

<div class="row">

    <div class="col-md-2">
        <div class="dashboard">
            @*<img src="/img/gfffj.png" alt="Alternate Text" height="50" />*@    @*<h1 class="text-center">GhArDailO </h1>*@
            @*<h6 class="text-center">GHArDaiLo</h6>
            <h6 class="text-center">ADMIN</h6>*@
            <hr />

            <div class="container ml-4">
                <div class="card-img-top">
                    <div class="items">
                        <a asp-action="Create" asp-controller="Product" class="lol"><img src="~/Design/spcart.png" height="30" alt="Alternate Text" /> Add Product</a>

                    </div>
                    <div class="items mt-5">
                        <a asp-action="Index" asp-controller="Product" class="lol"><img src="~/Design/view.png" height="30" alt="Alternate Text" /> View Product</a>

                    </div>
                    <div class="items mt-5">
                        <a asp-action="Edit" asp-controller="Product" class="lol"><img src="~/Design/edit.png" height="30" alt="Alternate Text" /> Edit Product</a>

                    </div>

                    <div class="items mt-5">
                        <a href="#" class="lol"><img src="~/Design/user.png" height="30" alt="Alternate Text" />User Information</a>

                    </div>

                    <div class="items mt-5">
                        <a href="#" class="lol"><img src="~/Design/sale.png" height="30" alt="Alternate Text" />Monthly Sales</a>

                    </div>

                    <div class="items mt-5">
                        <a href="#" class="lol"><img src="~/Design/year.png" height="30" alt="Alternate Text" />Yearly Sales</a>

                    </div>


                </div>

            </div>
        </div>

    </div>
    <div class="col-md-10">
        <table class="table table-hover table-bordered mt-3 container">
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Price </th>
                <th>Stock</th>
                <th>M.F.D</th>
                <th>E.X.P</th>
                <th>Category Name</th>
                <th>Product Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice</td>
                    <td>@item.Stock</td>
                    <td>@item.Manufacture</td>
                    <td>@item.Expire</td>
                    <td>@item.CategoryName</td>
                    <td>@item.ProductDescription</td>


                    <td>
                        @if (item.ImageName != null)
                        {
                            <img src="~/Images/@item.ImageName" class="img-fluid img-thumbnail" width="100" height="50" />
                        }
                        else
                        {
                            <img src="~/Images/bike-default.png" class="img-fluid img-thumbnail" width="100" height="50" />
                        }.
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">View</a>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" onclick="return confirm('Are you sure you want to delete this data?');">Delete</a>
                    </td>
                </tr>

            }
        </table>

    </div>
</div>
